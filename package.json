{
  "name": "pdfjs-reader",
  "author": "Serge Slipcheko <Serge.Slipchenko@gmail.com>",
  "displayName": "PDF.js Reader",
  "description": "PDF.js document reader for VS Code",
  "version": "0.1.0-pre-alpha",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "pdf",
    "viewer"
  ],
  "icon": "pdfjs-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sslipchenko/pdfjs-reader.git"
  },
  "bugs": {
    "url": "https://github.com/sslipchenko/pdfjs-reader/issues"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pdfjsReader.goBack",
        "title": "Back",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.goForward",
        "title": "Forward",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.selectSpreadMode",
        "title": "Spread Mode",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.selectScrollMode",
        "title": "Scroll Mode",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.selectZoomMode",
        "title": "Zoom Mode",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.zoomIn",
        "title": "Zoom In",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.zoomOut",
        "title": "Zoom Out",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.rotateLeft",
        "title": "Rotate Left",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.rotateRight",
        "title": "Rotate Right",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.goToPage",
        "title": "Go to Page",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.firstPage",
        "title": "Go to First Page",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.lastPage",
        "title": "Go to Last Page",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.prevPage",
        "title": "Go to Prev Page",
        "category": "Reader"
      },
      {
        "command": "pdfjsReader.nextPage",
        "title": "Go to Next Page",
        "category": "Reader"
      }
    ],
    "configuration": [
      {
        "id": "documentSettings",
        "title": "Document Settings",
        "properties": {
          "pdfjs-reader.pageNumber": {
            "type": "object",
            "default": {},
            "description": "Document page number",
            "scope": "resource"
          }
        }
      },
      {
        "id": "viewSettings",
        "title": "View Settings",
        "properties": {
          "pdfjs-reader.zoomMode": {
            "type": "string",
            "default": "auto",
            "description": "View zoom mode",
            "scope": "workspace"
          },
          "pdfjs-reader.scrollMode": {
            "type": "string",
            "default": "vertical",
            "description": "View scroll mode",
            "scope": "workspace"
          },
          "pdfjs-reader.spreadMode": {
            "type": "string",
            "default": "none",
            "description": "View spread mode",
            "scope": "workspace"
          }
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "pdfjsReader.pdfReader",
        "displayName": "PDF.js Reader",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "default"
      }
    ],
    "icons": {
      "pdfjs-reader-spread-none": {
        "description": "Spread None",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E001"
        }
      },
      "pdfjs-reader-spread-odd": {
        "description": "Spread Odd",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E002"
        }
      },
      "pdfjs-reader-spread-even": {
        "description": "Spread Even",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E003"
        }
      },
      "pdfjs-reader-scroll-page": {
        "description": "Scroll Page",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E004"
        }
      },
      "pdfjs-reader-scroll-vertical": {
        "description": "Scroll Vertical",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E005"
        }
      },
      "pdfjs-reader-scroll-horizontal": {
        "description": "Scroll Horizontal",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E006"
        }
      },
      "pdfjs-reader-scroll-wrapped": {
        "description": "Scroll Wrapped",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E007"
        }
      },
      "pdfjs-reader-zoom-in": {
        "description": "Zoom In",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E008"
        }
      },
      "pdfjs-reader-zoom-out": {
        "description": "Zoom Out",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E009"
        }
      },
      "pdfjs-reader-rotate-left": {
        "description": "Rotate Left",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00A"
        }
      },
      "pdfjs-reader-rotate-right": {
        "description": "Rotate Right",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00B"
        }
      },
      "pdfjs-reader-page-first": {
        "description": "Go to First Page",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00C"
        }
      },
      "pdfjs-reader-page-last": {
        "description": "Go to Last Page",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00D"
        }
      },
      "pdfjs-reader-page-prev": {
        "description": "Go to Prev Page",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00E"
        }
      },
      "pdfjs-reader-page-next": {
        "description": "Go to Next Page",
        "default": {
          "fontPath": "dist/icons.woff2",
          "fontCharacter": "\\E00F"
        }
      }
    },
    "keybindings": [
      {
        "command": "pdfjsReader.goBack",
        "key": "ctrl+[",
        "mac": "cmd+[",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.goForward",
        "key": "ctrl+]",
        "mac": "cmd+]",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.zoomIn",
        "key": "ctrl+=",
        "mac": "cmd+=",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.zoomOut",
        "key": "ctrl+-",
        "mac": "cmd+-",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.rotateLeft",
        "key": "ctrl+L",
        "mac": "cmd+L",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.rotateRight",
        "key": "ctrl+R",
        "mac": "cmd+R",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      },
      {
        "command": "pdfjsReader.goToPage",
        "key": "ctrl+G",
        "mac": "cmd+G",
        "when": "resourceExtname == '.pdf' && activeCustomEditorId == 'pdfjsReader.pdfReader'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "prebuild": "yarn run copy-libs && yarn run generate-font && yarn run copy-files",
    "build": "tsc -b ./",
    "prewatch": "yarn run generate-font && yarn run copy-files",
    "watch": "tsc -w -b ./",
    "generate-font": "fantasticon",
    "copy-files": "copyfiles -u 2 ./src/view/*.{css,html} ./dist/view",
    "copy-libs": "yarn run copy-pdfjs && yarn run copy-vscode",
    "copy-pdfjs": "copyfiles -u 2 './node_modules/pdfjs-dist/{build,cmaps,standard_fonts,image_decoders,web}/**/*' ./dist/view",
    "copy-vscode": "copyfiles -u 1 './node_modules/@vscode-elements/elements/dist/bundled.js' './node_modules/@vscode/codicons/dist/*.{ttf,css}' ./dist/view",
    "pretest": "yarn run build && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode-elements/elements": "^1.13.1",
    "@vscode/codicons": "^0.0.36",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.19.0",
    "fantasticon": "^3.0.0",
    "pdfjs-dist": "^4.10.38",
    "typescript": "^5.7.3"
  }
}
